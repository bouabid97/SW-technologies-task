<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:hint="Name"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/name_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:hint="Age"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/age_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:hint="City"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/city_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/profession"
        android:layout_width="match_parent"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:hint="Profession"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profession_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"/>
    <CheckBox android:id="@+id/isMarried"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Married ?" />
    <CheckBox android:id="@+id/hasDiploma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Diploma ?" />
    <EditText
        android:id="@+id/currentSubjects"
        android:layout_width="match_parent"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:hint="Current Subjects"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/currentSubjects_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dip"
        android:layout_centerHorizontal="true"/>
    <Button
       android:id="@+id/btn_save"
       android:layout_height="wrap_content"
       android:text="Save"
       android:layout_width="200dip"
       android:layout_centerHorizontal="true"/>
</LinearLayout>